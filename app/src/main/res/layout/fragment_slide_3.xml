<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/ic_launcher_background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:src="@drawable/image_3"
        android:layout_height="200dp"
        android:id="@+id/slideimg"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:textColor="#fff"
        android:id="@+id/txttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="راحت و دوست داشتنی"
        android:fontFamily="@font/aviny"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"></TextView>

    <TextView
        android:textColor="#fff"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textdescription"
        android:fontFamily="@font/aviny"
        android:textSize="27sp"
        android:layout_marginTop="40dp"
        android:text="این برنامه بسیار راحت بوده و هر فردی میتواند با این برنامه کار کند."></TextView>




</LinearLayout>