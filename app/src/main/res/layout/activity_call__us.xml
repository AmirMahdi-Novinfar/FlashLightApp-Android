<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_of_call"
    android:orientation="vertical"
    tools:context="com.example.amirnovinfar.Activity.Call_Us">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="25dp"
        android:text="تماس باما"
        android:fontFamily="@font/aviny"
        android:textColor="@android:color/white"
        android:textSize="40sp"

        >

    </TextView>

    <EditText
        android:id="@+id/edt_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="موضوع خود را وارد کنید"
        android:maxHeight="2dp"

        android:maxLines="2"></EditText>
    <EditText
        android:id="@+id/edt_body"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:hint="پیام خود را وارد کنید"></EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="160dp"
        android:text="ارسال"
        android:id="@+id/btn_send_payam"
        android:fontFamily="@font/aviny"
        android:textSize="30sp"></Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="150dp"
        android:text="تماس با تلفن"
        android:id="@+id/connect_via_tel"
        android:fontFamily="@font/aviny"
        android:textSize="30sp"></Button>
</LinearLayout>
